       <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
 
       <TextView
            android:id="@+id/RegtvOtherName4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="지인4 :"
            android:layout_alignBaseline="@+id/RegetOtherName4"/>
       <EditText
            android:id="@+id/RegetOtherName4"
            android:layout_width="70dp"
